<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ProfileFragment">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="97dp"
        android:id="@+id/imageViewProfile"
        android:src="@drawable/profilelogo"
        android:layout_gravity="left"
        />


    <TextView
        android:id="@+id/user_profil"
        android:layout_width="75dp"
        android:layout_height="15.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="100dp"
        android:gravity="top"
        android:text="@string/user_profil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstNameProfileText"
            android:layout_width="193dp"
            android:layout_height="46dp"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/lastNameProfileText"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bloodTypeProfileText"
            android:layout_width="193dp"
            android:layout_height="46dp"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/sexProfileText"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amkaProfileText"
            android:layout_width="193dp"
            android:layout_height="46dp"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/personalDoctorProfileText"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textStyle="bold"
            android:lines="2"
            android:singleLine="false"
            android:paddingStart="10dp"
            android:textSize="15dp" />




    </LinearLayout>





</FrameLayout>