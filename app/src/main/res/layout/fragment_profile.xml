<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ProfileFragment">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="97dp"
        android:id="@+id/imageViewProfile"
        android:src="@drawable/profilelogo"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/userprofile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/user_profile"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5d8aa6"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bloodTypeProfileText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="38dp"
            />

        <TextView
            android:id="@+id/sexProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personalDoctorProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/personaldata_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/personal_data"
            android:textAlignment="center"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15sp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amkaProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:gravity="center"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>







</FrameLayout>