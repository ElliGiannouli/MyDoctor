<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ProfileFragment">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="97dp"
        android:id="@+id/imageViewProfile"
        android:src="@drawable/profilelogo"
        android:layout_gravity="left"
        />


    <TextView
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:gravity="top"
        android:text="@string/user_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstNameProfileText"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:background="#5d8aa6"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lastNameProfileText"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:background="#5d8aa6"
            android:lines="2"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bloodTypeProfileText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="38dp"
            />

        <TextView
            android:id="@+id/sexProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amkaProfileText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="38dp" />

        <TextView
            android:id="@+id/personalDoctorProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15dp"
            android:textStyle="bold" />




    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailProfileText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="38dp"
            />

        <TextView
            android:id="@+id/dateProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:lines="2"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textSize="15dp"
            android:textStyle="bold" />




    </LinearLayout>





</FrameLayout>